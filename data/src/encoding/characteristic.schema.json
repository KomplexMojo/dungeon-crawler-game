{
  "$id": "http://example.com/schemas/characteristic.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Characteristic Definition",
  "description": "A single characteristic category with its subcategories.",
  "required": ["index", "name", "description", "definitionRole", "definitionSubcategories"],
  "properties": {
    "index": {
      "type": "integer",
      "minimum": 40,
      "maximum": 89
    },
    "name": {
      "type": "string",
      "maxLength": 32
    },
    "description": {
      "type": "string",
      "maxLength": 256
    },
    "definitionRole": {
      "type": "string",
      "const": "characteristic"
    },
    "definitionSubcategories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["subindex", "name", "description"],
        "properties": {
          "subindex": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          },
          "name": {
            "type": "string",
            "maxLength": 32
          },
          "description": {
            "type": "string",
            "maxLength": 256
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
